@model EcommerceWeb.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasDiscount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HasDiscount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>

        <dt class="col-sm-2">
            Categories
        </dt>
        <dd class="col-sm-10">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories.Distinct())
                {
                    <span>@category</span><br />
                }
            }
            else
            {
                <p>No categories available for this product.</p>
            }
        </dd>

        <dt class="col-sm-2">
            Images
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagePath != null && Model.ImagePath.Any())
            {
                @foreach (var img in Model.ImagePath)
                {
                    <img src="@img" alt="Product Image" style="max-width:200px;" /> <!-- Set the appropriate style for display -->
                }
            }
            else
            {
                <p>No images available for this product.</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
